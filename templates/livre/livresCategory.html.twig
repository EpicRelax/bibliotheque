{% extends 'base.html.twig' %}

{% block title %}Nos Livres !{% endblock %}

{% block body %}
<div id="wrapCard">
    {% for livre in livres %}
    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
        <div class="card-header">{{livre.titre}}</div>
        <div class="card-body">
            <h4 class="card-title">{{livre.auteur}}</h4>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}