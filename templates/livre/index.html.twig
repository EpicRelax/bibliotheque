{% extends 'base.html.twig' %}

{% block title %}Nos Livres !{% endblock %}

{% block body %}
<div id="wrapCard">
    {% for livre in livres %}
    <div class="card text-white bg-dark mb-3" style="max-width: 20rem;">
        <div class="card-header">{{livre.titre}}</div>
        <div class="card-body">
            <h4 class="card-title">{{livre.auteur}}</h4>
            <p class="card-text">{{livre.dateSortie|date("d-M-Y")}}</p>
            {% if is_granted('ROLE_ADMIN')%}
                <a class="dropdown-item" href="{{path('modifierlivre', {'id':livre.id})}}">Modifier le livre</a> 
                <a class="dropdown-item" href="{{path('removelivre', {'id':livre.id})}}">Supprimer le livre</a> 
                <a class="dropdown-item" href="{{path('livresCategory', {'id':livre.category.id})}}">Category</a>
            {% endif %}
            
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}